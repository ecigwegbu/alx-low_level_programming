# My Second Useful Make file :)

#gcc    -c -o main.o main.c
#gcc    -c -o school.o school.c
#gcc main.o school.o -o school

CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f

.PHONY: all
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c -o $@ $<

.PHONY: clean oclean fclean re

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re:
	$(RM) $(OBJ)
	touch $(SRC)
	$(MAKE)
